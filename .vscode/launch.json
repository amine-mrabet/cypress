    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug cypress",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "cypress open -d",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}